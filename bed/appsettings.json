{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "d7b61e40-9040-40fb-80f5-cef6bce3795a",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "Security": {
        "AllowConcurrentLogins": false
      },
      "ModelsBuilder": {
        "ModelsMode": "SourceCodeManual",
        "ModelsNamespace": "bed.Models",
        "FlagOutOfDateModels": false,
        "ModelsDirectory": "~/Models",
        "AcceptUnsafeModelsDirectory": false,
        "DebugLevel": 0
      },
      "DeliveryApi": {
        "Enabled": true,
        "PublicAccess": false,
        "ApiKey": "my-api-key"
      }
    }
  },
  "DeliveryApiExtensions": {
    "Preview": {
      "Enabled": true,
      "Media": {
        "Enabled": true
      },
      "AllowedUserGroupAliases": [],
      "ContentAppWeight": -50
    },
    "TypedSwagger": {
      "Enabled": true,
      "Mode": "Auto"
    }
  },
  /* TODO: I like to have content for testing somehow */
  /* TODO: I like to have minimal/required content sync once to scaffold the site on first deploy */
  "uSync": {
    "Settings": {
      "DefaultSet": "Default",
      "ExportOnSave": "Settings"
    },
    "Sets": {
      "Default": {
        /* Disable content and webhooks from serialization */
        "DisabledHandlers": [
          "WebhookHandler",
          "ContentHandler",
          "PublishedContentHandler"
        ]
      }
    }
  },
  "bed": {
    "IsBackOfficeDisabled": false,
    "IsWebsiteDisabled": true,
    "Sites": [
      {
        /* site name is specified on the home page of the site */
        "Name": "Site1",
        "RemoteDisabled": false,
        "RemoteApiKey": "secret",
        "RemoteApiCacheEndpoint": "http://localhost:3000/api/cache/invalidate"
      },
      {
        "Name": "Site2",
        "RemoteDisabled": true
      }
    ],
    "SearchOptions": {
      "AggregateContentFields": [
        "title",
        "main",
        "text",
        "keywords",
        "summary",
        "tags"
      ]
    }
  }
}